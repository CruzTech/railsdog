<div class="col-md-4" ></div>
<div class="col-md-4 authform" >
  <%= simple_form_for(resource, as: :user, url: session_path(:user)) do |f| %>
    <h2>Sign in</h2>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
    	<%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
  	</div>
  <% end %>
  <br/>
	<%= render "devise/shared/links" %>
</div>
